<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DoctorLoginSignUpSelection"
    android:paddingHorizontal="20dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="250dp"
        android:src="@drawable/splash_logo"
        android:layout_above="@+id/tvDoctorLoginSignupAppName"/>

    <TextView
        android:id="@+id/tvDoctorLoginSignupAppName"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:text="e-Cure"
        android:fontFamily="sans-serif-smallcaps"
        android:textAlignment="center"
        android:textColor="@color/e_cure_blue"
        android:textSize="45sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDoctorLoginSignupMessage"
        android:layout_below="@id/tvDoctorLoginSignupAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="We will help you find patients using online services"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="16sp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingVertical="20dp">

            <Button
                android:id="@+id/btnDrlogin"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:text="LOGIN"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"/>
            <Button
                android:id="@+id/btnDrsignup"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:textStyle="bold"
                android:text="SIGN UP"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

</RelativeLayout>